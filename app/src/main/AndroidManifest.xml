<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uni_weimar.m18.exkursion" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LevelPrepareActivity"
            android:label="@string/title_activity_level"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.uni_weimar.m18.exkursion.MainActivity" />
        </activity>
        <activity
            android:name=".QuizMultipleChoice"
            android:label="@string/title_activity_quiz_multiple_choice" >
        </activity>

        <provider
            android:name=".data.LevelProvider"
            android:authorities="de.uni_weimar.m18.exkursion" />

        <activity
            android:name=".LevelActivity"
            android:label="@string/title_activity_level"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.uni_weimar.m18.exkursion.MainActivity" />
        </activity>
    </application>

</manifest>
